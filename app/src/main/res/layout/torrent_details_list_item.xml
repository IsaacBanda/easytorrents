<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="8dp"
    android:paddingLeft="16dp"
    android:orientation="vertical">


    <!-- Torrent Quality (720p | 1080p)-->
    <TextView
        android:id="@+id/tv_torrent_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="720P"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/im_folder_icon"
            android:src="@drawable/ic_folder"/>
        <TextView
            android:id="@+id/tv_torrent_file_size"
            android:text="780.9 MB"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rating" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/im_fold"
            android:foregroundTint="@color/genre"
            android:src="@drawable/ic_download"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/im_calendar_date_uploaded"
            android:src="@drawable/ic_calendar"/>
        <TextView
            android:id="@+id/tv_torrent_date_uploaded"
            android:text="780.9 MB"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rating" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/im_movie_runtime"
            android:src="@drawable/ic_clock"/>
        <TextView
            android:id="@+id/tv_torrent_runtime"
            android:text="1280x1024"
            android:paddingTop="5dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rating" />
    </LinearLayout>

    <!-- Rating -->


</LinearLayout>